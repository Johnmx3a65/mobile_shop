<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="315dp"
        android:layout_height="148dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:strokeColor="@color/black_light_200"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/allCategoriesLocationImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/mini" />

            <TextView
                android:id="@+id/allCategoryLocationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/black_dark_900"
                android:text="@string/Vitosha"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/allCategoriesLocationImage"
                app:layout_constraintTop_toTopOf="@+id/allCategoriesLocationImage" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="6dp"
                app:layout_constraintStart_toEndOf="@+id/allCategoriesLocationImage"
                app:layout_constraintTop_toBottomOf="@+id/allCategoryLocationName"
                app:srcCompat="@drawable/ic_location_grey" />

            <TextView
                android:id="@+id/allCategoriesLocationSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/inter_medium"
                android:text="@string/Sofia"
                android:textColor="@color/black_light_400"
                android:textSize="11dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="@+id/imageView3" />

            <TextView
                android:id="@+id/allCategoriesLocationDescription"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:ellipsize="end"
                android:fontFamily="@font/inter_regular"
                android:lineHeight="22dp"
                android:maxLines="3"
                android:text="@string/PlaceDescription"
                android:textColor="@color/black_light_400"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/allCategoriesLocationImage"
                app:layout_constraintStart_toStartOf="@+id/allCategoryLocationName" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
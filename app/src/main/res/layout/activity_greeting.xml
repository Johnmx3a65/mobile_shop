<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1080px"
    android:layout_height="2338px"
    android:layout_gravity="bottom"
    tools:context=".GreetingActivity"
    android:background="@drawable/bg_image_start_page">

    <Button
        android:id="@+id/greetingStartBtn"
        style="@style/main_button"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="20dp"
        android:text="@string/start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        style="@style/headline_800"
        android:layout_width="318dp"
        android:layout_height="94dp"
        android:layout_marginBottom="232dp"
        android:text="@string/explore_bulgaria"
        android:textColor="@color/black_white_0"
        app:layout_constraintBottom_toTopOf="@+id/greetingStartBtn"
        app:layout_constraintStart_toStartOf="@+id/greetingStartBtn" />

    <TextView
        android:id="@+id/textView2"
        style="@style/body_text_300"
        android:layout_width="318dp"
        android:layout_height="47dp"
        android:layout_marginTop="30dp"
        android:text="@string/under_explore"
        android:textColor="@color/black_white_0"
        app:layout_constraintStart_toStartOf="@+id/greetingStartBtn"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:srcCompat="@drawable/ic_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Buttons -->
    <style name="main_button" parent="@style/Widget.Material3.CardView.Filled">
        <item name="backgroundTint">@color/brand_default_500</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_dark_900</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:outlineSpotShadowColor">@color/brand_default_500</item>
    </style>

    <style name="second_button" parent="@style/Widget.Material3.Button.OutlinedButton">
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">15dp</item>
        <item name="strokeColor">@color/black_light_200</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_dark_900</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="input_field" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="passwordToggleDrawable">@drawable/show_password_selector</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColorHint">@color/black_light_400</item>
        <item name="boxStrokeColor">@color/brand_default_500</item>
        <item name="boxStrokeErrorColor">@color/error_dark_700</item>
        <item name="hintTextColor">@color/brand_default_500</item>
    </style>

    <style name="input_text_field">
        <item name="errorTextColor">@color/error_dark_700</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/black_dark_900</item>
    </style>

</resources>
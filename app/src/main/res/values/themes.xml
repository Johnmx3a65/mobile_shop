<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Shop" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_default_500</item>
        <item name="colorPrimaryVariant">@color/brand_default_500</item>
        <item name="colorOnPrimary">@color/black_white_0</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brand_default_500</item>
        <item name="colorSecondaryVariant">@color/brand_default_500</item>
        <item name="colorOnSecondary">@color/black_white_0</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Typography -->
    <style name="headline_900">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textSize">56sp</item>
    </style>
    <style name="headline_800">
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">36sp</item>
    </style>
    <style name="headline_700">
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="headline_600">
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="headline_500">
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="headline_400">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="headline_300">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="heading_200">
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="heading_100">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="body_text_300">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="body_text_200">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="body_text_100">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.Shop.BackgroundImageStyle">
        <item name="android:windowBackground">@drawable/bg_image_start_page</item>
    </style>
</resources>